<!DOCTYPE html>

<html lang="en">

<head>
  <title>TinyApp</title>
</head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <table style="width: 50%">
    <tr style="text-align: left;">
      <th>shortURL</th>
      <th>URL</th>
      <th>Visits</th>
      <th>Actions</th>
    </tr>

    <% for (let key in urls) { %>
      <tr>
        <td><%= key %></td>
        <td><%= urls[key].url %></td>
        <td><%= urls[key].visits %></td>
        <td>
          <a href="/urls/<%= key %>">Edit</a>
          <form method="POST" action="/urls/<%= key %>/delete?_method=DELETE" style="display: inline-block;">
            <input type="submit" value="Delete">
          </form>
        </td>
      </tr>
    <% } %>

  </table>

  <a href="/urls/new">Create new short URL</a>
</body>

</html>